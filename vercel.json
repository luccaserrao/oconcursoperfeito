{
  "buildCommand": "echo \"Skipping build on Vercel; serving prebuilt dist\"",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "futuroperfeito.com.br" }],
      "destination": "https://www.futuroperfeito.com.br/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml" },
    { "source": "/admin/:path*", "destination": "/" },
    { "source": "/paid-content", "destination": "/" },
    { "source": "/obrigado", "destination": "/" }
  ],
  "functions": {
    "api/sitemap.xml.js": {
      "includeFiles": "content/blog/**"
    }
  }
}
